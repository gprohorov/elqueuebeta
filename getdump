#!/bin/bash

if [ "$1" != "cv" ] && [ "$1" != "kl" ]
then 
  echo "Error! Wrong params! Allowed params are: cv | kl"
  exit
fi

DST=$1
SERVER_PATH=/home/bvh/elqueue

rm -R ./dump
rm ./dump.tar.gz

ssh -tt bvh@195.200.245.115 -p 2222 'cd $SERVER_PATH;rm -R dump;rm dump.tar.gz;mongodump -d mednean;tar -zcvf dump.tar.gz dump;exit'
scp -P 2222 bvh@195.200.245.115:$SERVER_PATH/dump.tar.gz ./

tar -zxvf dump.tar.gz 
mongorestore --drop
