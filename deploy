echo 'Building Front-end...'
echo ''
cd front
ng build -prod --locale uk

echo ''
echo 'Building Back-end...'
echo ''
cd ..
mvn clean package

echo ''
echo 'Copying app to destination server...'
echo ''
scp -P 2222 ./target/elqueuebeta-0.0.1-SNAPSHOT.jar bvh@195.200.245.115:/home/bvh/elqueue

echo ''
echo 'Enter password for remotely RESTART server'
ssh -tt bvh@195.200.245.115 -p 2222 'sudo systemctl stop elqueue.service;sudo truncate /home/bvh/elqueue/elqueue.out --size 0;sudo systemctl start elqueue.service;exit'
